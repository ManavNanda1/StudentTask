@model StudentTask.Model.User.LoginModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <title>Student Task</title>
 
    <link href="~/LoginTheme/css/style.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body>
    <img class="wave" src="~/LoginTheme/img/wave.png">
    <div class="container">
        <div class="img">
            <img src="~/LoginTheme/img/bg.svg">
        </div>
        <div class="login-content">
            <form asp-action="Login" method="post">
                <img src="~/LoginTheme/img/avatar.svg">
                <h2 class="title">Welcome</h2>
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <h5>Email</h5>
                        <input asp-for="Email" class="input" />
                    </div>
                </div>
                <span asp-validation-for="Email" style="color:red"></span>
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>Password</h5>
                        <input asp-for="Password" type="password" class="input" />
                    </div>
                </div>
                <span asp-validation-for="Password" style="color:red"></span>
                <a> Dont Have An Account?</a>
                <p style="color:red">@ViewBag.Error</p>
                <input type="submit" class="btn" value="Login">
            </form>
        </div>
    </div>
    <script type="text/javascript" src="~/LoginTheme/js/main.js"></script>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
</html>